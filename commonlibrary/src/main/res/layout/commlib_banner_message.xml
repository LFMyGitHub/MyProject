<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_65dp"
    >

    <RelativeLayout
        android:id="@+id/topLine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/size_5dp"
        android:background="@drawable/commlib_green"
        >

        <ImageView
            android:id="@+id/commlib_image_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginRight="@dimen/size_20dp"
            android:src="@mipmap/commlib_hotpoint" />

        <ImageView
            android:id="@+id/commlib_image_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginRight="@dimen/size_10dp"
            android:src="@mipmap/commlib_right_arrow" />

        <com.youth.banner.Banner
            android:id="@+id/commlib_message_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_65dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/commlib_image_right"
            android:layout_toRightOf="@+id/commlib_image_top" />
    </RelativeLayout>
</RelativeLayout>