<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/commlib_ll_ic_scan"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_height="@dimen/size_80dp"
    android:background="@color/color_1983d1"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/commlib_iv_ic_scan"
        android:layout_width="@dimen/size_50dp"
        android:layout_height="@dimen/size_50dp"
        android:paddingLeft="@dimen/size_12_5dp"
        android:paddingRight="@dimen/size_12_5dp"
        android:src="@mipmap/commlib_ic_scan" />

    <TextView
        android:id="@+id/commlib_tv_ic_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="扫一扫"
        android:textColor="@color/color_FFFFFF" />

</LinearLayout>